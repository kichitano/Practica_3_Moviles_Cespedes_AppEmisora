<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kichi.myapplication.MainActivity">

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Picante" />
    <CheckBox
        android:id="@+id/cb2"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Pollo a la brasa"
        android:layout_below="@id/cb1"/>
    <CheckBox
        android:id="@+id/cb3"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Seco de res"
        android:layout_below="@id/cb2"
         />
    <CheckBox
        android:id="@+id/cb4"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Adobo arequipeÃ±o"
        android:layout_below="@id/cb3"
         />
    <CheckBox
        android:id="@+id/cb5"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Rocoto relleno"
        android:layout_below="@id/cb4"
         />
    <CheckBox
        android:id="@+id/cb6"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Arroz con pollo"
        android:layout_below="@id/cb5"
        />

    <Button
        android:id="@+id/BtnPedido"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Enviar Pedido" />


</RelativeLayout>
